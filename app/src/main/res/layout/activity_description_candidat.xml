<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".description_candidat">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#274B94" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="-19dp"
        android:background="#11FF00"
        android:src="@mipmap/logo_ufr_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/niveau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Blog_candidat"
            android:textColor="#8BC34A"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="55dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_candidat"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@mipmap/fondb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="258dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Nom_candidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nom_candidat"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#7A76F3"/>

        <TextView
            android:id="@+id/Slogant_candidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Slogant candidat"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/voter"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Voter pour moi"
                android:textSize="20dp"
                android:layout_marginBottom="10dp">

            </Button>

            <Button
                android:id="@+id/statistique"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:text="Voir les stats"
                android:backgroundTint="#FF9800"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

            </Button>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="420dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="390dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progamme_candidat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Akwabao bienvenue sur nôtre Appli de vote en ligne !!!"
                    android:textSize="30dp">

                </TextView>

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="171dp"
                    android:autoStart="true"
                    android:flipInterval="5000"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:orientation="horizontal"
                    android:outAnimation="@android:anim/slide_out_right">

                    <LinearLayout
                        android:id="@+id/champs_candidat"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/image_candidat_slide"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#00D5D5D5"
                            android:src="@mipmap/image0" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/presentation_candidat"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="COuCOu, Je suis Adou Trésor"
                                android:textSize="20dp" />


                            <TextView
                                android:id="@+id/voix"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:background="#E3F2FD"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="#F50057"

                                android:textSize="45dp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_candidat1_slide"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="#00D5D5D5"
                                android:src="@mipmap/image2_foreground" />

                            <TextView
                                android:id="@+id/presentation_candidat1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Hola!, Je suis Tco Hardisk"
                                android:textSize="20dp">

                            </TextView>

                            <TextView
                                android:id="@+id/voix2"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:background="#E3F2FD"
                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="#F50057"

                                android:textSize="45dp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>
                </ViewFlipper>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>