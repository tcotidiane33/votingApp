                    android:textSize="30dp">

                </TextView>

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:autoStart="true"
                    android:flipInterval="5000"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:orientation="horizontal"
                    android:outAnimation="@android:anim/slide_out_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="horizontal"
                        android:id="@+id/champs_candidat">


                        <ImageView
                            android:id="@+id/image_candidat_slide"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:background="#00D5D5D5"
                            android:src="@mipmap/image0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/presentation_candidat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="COuCOu, Je suis Adou Trésor"
                                android:textSize="20dp"/>

                            <TextView
                                android:id="@+id/discour_candidat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="08dp"
                                android:text="COuCOu, Je suis Adou Trésor"
                                android:textSize="15dp">

                            </TextView>
                            <TextView
                                android:id="@+id/voix"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_candidat1_slide"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:background="#00D5D5D5"
                                android:src="@mipmap/image2_foreground" />

                            <TextView
                                android:id="@+id/presentation_candidat1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Hola!, Je suis Aimé Trésor Adou"
                                android:textSize="20dp">

                            </TextView>

                            <TextView
                                android:id="@+id/discour_candidat1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="08dp"
                                android:text="COuCOu, Je suis Adou Trésor"
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>
                </ViewFlipper>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>