<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>


    <ImageView
        android:id="@+id/iphone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@color/material_on_surface_emphasis_medium"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_dark"/>


    <ImageView
        android:id="@+id/connexion_image"
        android:layout_width="match_parent"
        android:layout_height="420sp"
        android:layout_alignTop="@+id/nom"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-75dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/connexion_image_background"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/profil_image"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="45dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginBottom="100px"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:text="NOTRE DELEGUE"
            android:textColor="#FFF"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="serif">

        </TextView>

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:radius="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="115dp"
        android:src="@mipmap/best_profil_round" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="230dp"
        android:background="#00EDEFEF"
        android:src="@mipmap/champ_connexion_round" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="305dp"
        android:background="#00D5D5D5"
        android:src="@mipmap/icon_mdp_round" />


    <EditText
        android:id="@+id/nom"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="245dp"
        android:backgroundTint="#FF9800"
        android:ems="10"
        android:hint="Votre nom d'inscription "
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textSize="11sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_image"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remenber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="200dp"
            android:text="se souvenir de moi"
            android:textColor="#4CAF50"
            android:textColorHint="#FBFBFB" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_image"
        android:orientation="horizontal">
        <Button
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Mot de passe oubliÃ©"
            android:textColor="#03A9F4"
            android:textSize="12dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demande"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:background="#00FFFFFF"
            android:text="Pas encore Inscris ?"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:orientation="horizontal">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_image"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="155dp"
            android:backgroundTint="#009688"
            android:ems="10"
            android:textColor="#229954"
            android:inputType="textPassword" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_image"
        android:orientation="horizontal">

        <Button
            android:id="@+id/valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="489dp">

        <Button
            android:id="@+id/inscrir"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="S'inscrire"
            android:background="#00FFFFFF"
            android:textColor="#FF9800"
            android:textSize="14dp" />
    </LinearLayout>


</RelativeLayout>