<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/univ4"
    android:fitsSystemWindows="true"
    tools:context=".deuxieme_activite">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#3F51B5" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="7dp"
        android:background="#00D5D5D5"
        android:src="@mipmap/logo_ufr_round" />

    <TextView
        android:id="@+id/niveau"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Departement MathÃ©matiques et informatique"
        android:textColor="#8BC34A"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginVertical="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iphone"
            android:layout_width="match_parent"
            android:layout_height="270dp"

            android:scaleType="fitXY"
            android:src="@mipmap/image0_foreground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/licence1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:text="Licence1" />

        <Button
            android:id="@+id/licence2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:text="Licence2" />

        <Button
            android:id="@+id/licence3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="Licence3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/master1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:text="Master1" />

        <Button
            android:id="@+id/master2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="Master2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="420dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@android:anim/slide_in_left"
            android:orientation="horizontal"
            android:outAnimation="@android:anim/slide_out_right">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="35dp"
                android:background="#00D5D5D5"
                android:src="@mipmap/image0" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="109dp"
                android:layout_marginTop="35dp"
                android:background="#00D5D5D5"
                android:src="@mipmap/image1" />
        </ViewFlipper>

    </LinearLayout>

    <TextView
        android:id="@+id/nom_utilisateur"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="230dp"
        android:textColor="#FFEB3B"/>


</RelativeLayout>